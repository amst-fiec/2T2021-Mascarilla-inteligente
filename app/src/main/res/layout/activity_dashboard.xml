<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/titulo_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_titleTable"
                    android:layout_width="320dp"
                    android:layout_height="80dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"/>
                <ImageButton
                    android:id="@+id/btn_signOut"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/titulo_registro"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cerrarsesion" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/tb_dashboardTable"
                    android:weightSum="3"
                    android:background="@drawable/color_tabla_datos"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:id="@+id/tb_time"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="Hora"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tb_distance"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="Distancia"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/tb_howManyTime"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="Tiempo"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </TableRow>
            </LinearLayout>
            <ScrollView
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="420dp">
                <TableLayout
                    android:id="@+id/tl_dashboard"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="475dp">
                    <TableRow
                        android:id="@+id/tb_dashboardData1"
                        android:weightSum="3"
                        android:background="@drawable/color_tabla_datos_celdas"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        >
                        <TextView
                            android:id="@+id/tb_timeData1"
                            android:layout_weight="1"
                            android:layout_height="1dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/tb_distanceData1"
                            android:layout_weight="1"
                            android:layout_height="1dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/tb_howManyTimeData1"
                            android:layout_weight="1"
                            android:layout_height="1dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                    </TableRow>
                </TableLayout>
            </ScrollView>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/titulo_registro"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_peopleAmountText"

                    android:textColor="@color/white"
                    android:text="Total de personas detectadas:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingLeft="30sp"
                    android:layout_height="100sp"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical" />
                <EditText
                    android:id="@+id/et_peopleAmountNumber"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_height="100sp"
                    android:layout_width="match_parent"
                    android:gravity="center"/>
            </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>